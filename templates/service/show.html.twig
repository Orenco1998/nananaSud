{% extends 'base.html.twig' %}


{% block title service.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">


            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    Erreur lors de la soumission du formulaire de contact
                </div>
            {% endif %}


            <div class="row">
                <div class="col-md-8">
                    {% if service.picture %}
                        <img src="{{ vich_uploader_asset(service, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height: auto">

                    {% else %}
                        <img src="{{ 'images/services/empty.jpg' | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height: auto">
                    {% endif %}
                </div>
                <div class="col-md-4">
                    <h1>{{ service.title }}</h1>
                    <div id="contactForm" class="mt-4">
                        <h3>Demander un devis</h3>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col">{{ form_row(form.prenom) }}</div>
                            <div class="col">{{ form_row(form.nom) }}</div>
                        </div>
                        <div class="row">
                            <div class="col">{{ form_row(form.telephone) }}</div>
                            <div class="col">{{ form_row(form.email) }}</div>
                        </div>
                        {{ form_rest(form) }}
                        <div class="form-group">
                            <button class="btn btn-primary">Envoyer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <p>
            {{ service.description | nl2br }}
        </p>
    </div>

{% endblock %}




